{% extends "search.twig" %}

{# This view will display result #}

{% block searchResult %}
<br/>
<div class="form-group">
  <label for="description">{{ clickAnEventToBookIt }}</label>
</div>

{% if availability is empty %}
  <div class="alert alert-warning" role="alert">{{ warningNoBookingFound }}</div>
{% else %}
  {# Booking list #}
  <ul class="list-group">
  {% for event in availability %}
    {% if event.IsPaidEvent == true%}

      <a href="?EventIdentifier={{event.EventIdentifier}}&DateDisplay={{event.DateDisplay}}&EventScheduleId={{event.EventScheduleId}}&isPadEvent={{event.IsPaidEvent}}&paymentAmount={{event.PaymentAmount}}&paymentCurrency={{event.PaymentCurrency}}&eventTitle={{event.EventTitle}}&currentUrl={{currentUrl}}"> <li class="list-group-item"><span class="badge">book-it!</span>{{event.DateDisplay}} : {{event.PaymentAmount}} {{event.PaymentCurrency}} : Paid Event : {{event.EventTitle}}</li></a>
    {% else %}
      <a href="?EventIdentifier={{event.EventIdentifier}}&DateDisplay={{event.DateDisplay}}&EventScheduleId={{event.EventScheduleId}}&isPadEvent=0&eventTitle={{event.EventTitle}}&currentUrl={{currentUrl}}"> <li class="list-group-item"><span class="badge">book-it!</span>{{event.DateDisplay}}</li></a>
    {% endif %}
  {% endfor %}
  </ul>
{% endif %}

