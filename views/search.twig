{% extends "wrapper.twig" %}
{% block content %}
<h2>{{ searchForEventsBetween }}</h2>
<form action="" method="get">

  <div class="form-group">
    <label for="from">{{ fromLabel }}</label>
    <input id="from" class="datepickerFrom" name="from" type="text">
  </div>
  <div class="form-group">
    <label for="to">{{ toLabel }}</label>
    <input id="to" class="datepickerTo" name="to" type="text">
  </div>
  <div class="form-group">
    <label for="bookableItems">{{ bookableItemsLabel }}</label>
    <!-- TODO:bookable items dropdownlist-->
    <select class="form-control">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </select>
  </div>
  <div class="form-group">
    <label for="location">{{ locationLabel }}</label>
    <input type="text" class="form-control" placeholder="{{ locationValue }}" readonly>
  </div>
  <div class="form-group">
    <label for="description">{{ descriptionLabel }}</label>
    <input type="text" class="form-control" placeholder="{{ descriptionValue }}" readonly>
  </div>

  <button class="btn btn-lg btn-default" type="submit" name="submit">
    <span class="glyphicon glyphicon-search" aria-hidden="true"></span> {{ search }}
  </button>

  <button class="btn btn-lg btn-default" type="submit" name="submit">
    <span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span> {{ help }}
  </button>

</form>

