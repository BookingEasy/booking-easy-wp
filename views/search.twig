<script type="text/javascript">
var $input = jQuery('.datepickerFrom').pickadate({
  format: '{{dateFormat}}',
  formatSubmit: 'd m yyyy',
  container: '#container',
  closeOnSelect: true,
  closeOnClear: false
})
var picker = $input.pickadate('picker')
</script>

<script type="text/javascript">
